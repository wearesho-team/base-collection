{
  "name": "wearesho-team/base-collection",
  "description": "Typed collection based on ArrayObject",
  "type": "library",
  "require": {
    "php": "^7.1 || ^8.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.60",
    "phpunit/phpunit": "^7.4 || ^8.0 || ^9.0",
    "psalm/plugin-phpunit": "^0.15.0",
    "squizlabs/php_codesniffer": "^3.3",
    "vimeo/psalm": "^4.3"
  },
  "authors": [
    {
      "name": "Roman Varkuta",
      "email": "roman.varkuta@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Wearesho\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 1800,
    "sort-packages": true,
    "platform": {
      "php": "7.4"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=PSR2 ./src/ ./tests/",
    "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit --order-by=random --columns max",
    "phpstan": "phpstan analyse src tests",
    "psalm": "psalm --threads=8 -c=psalm.xml",
    "lint": [
      "@phpcs",
      "@phpstan",
      "@psalm"
    ],
    "build": [
      "@lint",
      "@test"
    ],
    "build-cover": [
      "@lint",
      "@cover"
    ]
  },
  "license": "MIT"
}
